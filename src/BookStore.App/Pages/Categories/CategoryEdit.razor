@page "/categoryedit"
@page "/categoryedit/{CategoryId}"

@if (!Saved)
{
    <section class="category-edit">
        <h1 class="page-title">Category</h1>
        <EditForm Model="@CategoryDto" OnValidSubmit="@HandleValidSubmit"
                  OnInvalidSubmit="@HandleInvalidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary></ValidationSummary>
            
            <div class="form-group row">
                <label for="category" class="col-sm-3">Category name: </label>
                <InputText id="category" class="form-control col-sm-8" @bind-Value="@CategoryDto.Name" placeholder="Category"></InputText>
                <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => CategoryDto.Name)" />
            </div>

            <button type="submit" class="btn btn-success mr-2">Save category</button>

            @if (CategoryDto.Id > 0)
            {
                <button class="btn btn-danger mr-2" type="submit" @onclick="@DeleteCategory">Delete</button>
            }

            <button class="btn btn-info" type="submit" @onclick="@NavigateToList">Back</button>
        </EditForm>
    </section>
}
else
{
    <div class="alert @StatusClass">@Message</div>
}